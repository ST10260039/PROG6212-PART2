@model List<MonthlyClaimSystem.Models.Claim>
@{
    Layout = "_Layout";
    ViewData["Title"] = "My Claims";
}

<h3>My Submitted Claims</h3>

<table class="table table-bordered table-sm">
    <thead>
        <tr>
            <th>Claim ID</th>
            <th>Hours</th>
            <th>Rate</th>
            <th>Total</th>
            <th>Status</th>
            <th>Submitted</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.ClaimId</td>
                <td>@claim.HoursWorked</td>
                <td>@claim.HourlyRate</td>
                <td>@claim.TotalPayment.ToString("C")</td>
                <td>
                    @* Show combined status using VerifyStatus + ApproveStatus *@
                    @if (claim.VerifyStatus == "Pending")
                    {
                        <span class="badge bg-warning">Pending Verification</span>
                    }
                    else if (claim.VerifyStatus == "Verified" && claim.ApproveStatus == "Pending")
                    {
                        <span class="badge bg-info">Verified (Awaiting Approval)</span>
                    }
                    else if (claim.ApproveStatus == "Approved")
                    {
                        <span class="badge bg-success">Approved</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Rejected</span>
                    }
                </td>
                <td>@claim.DateSubmitted.ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>