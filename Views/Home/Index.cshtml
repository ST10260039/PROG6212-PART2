@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <h2 class="text-center mb-4">Monthly Claim System Login</h2>

            <!-- Login Form -->
            <form asp-action="Login" asp-controller="Account" method="post">
                <div class="mb-3">
                    <label for="Email" class="form-label">Email</label>
                    <input type="email" name="Email" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label for="Password" class="form-label">Password</label>
                    <input type="password" name="Password" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label for="Role" class="form-label">Select Role</label>
                    <select name="Role" class="form-select" required>
                        <option value="">-- Select Role --</option>
                        <option value="Lecturer">Lecturer (Submit Claim)</option>
                        <option value="Coordinator">Coordinator (Verify Claim)</option>
                        <option value="Manager">Manager (Approve Claim)</option>
                        <option value="HR">HR (Manage Users & Lecturers)</option>
                    </select>
                </div>

                <button type="submit" class="btn btn-primary w-100">Login</button>
            </form>

            <!-- Optional: Registration link for HR to add users -->
            <div class="text-center mt-3">
                <p>Need an account? <a asp-action="Register" asp-controller="Account">Register here</a></p>
            </div>
        </div>
    </div>
</div>