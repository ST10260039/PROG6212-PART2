@model List<MonthlyClaimSystem.Models.Claim>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Filtered Claims Report";
}

<h3>Claims Report</h3>

<form asp-action="FilteredReport" method="get" class="row g-3 mb-4">
    <div class="col-md-2">
        <label>Verify Status</label>
        <select name="verifyStatus" class="form-select">
            <option value="">All</option>
            <option>Pending</option>
            <option>Verified</option>
            <option>Rejected</option>
        </select>
    </div>
    <div class="col-md-2">
        <label>Approve Status</label>
        <select name="approveStatus" class="form-select">
            <option value="">All</option>
            <option>Pending</option>
            <option>Approved</option>
            <option>Rejected</option>
        </select>
    </div>
    <div class="col-md-2">
        <label>Lecturer</label>
        <input type="text" name="lecturer" class="form-control" />
    </div>
    <div class="col-md-2">
        <label>Min Amount</label>
        <input type="number" step="0.01" name="minAmount" class="form-control" />
    </div>
    <div class="col-md-2">
        <label>Max Amount</label>
        <input type="number" step="0.01" name="maxAmount" class="form-control" />
    </div>
    <div class="col-md-2">
        <label>Min Rate</label>
        <input type="number" step="0.01" name="minRate" class="form-control" />
    </div>
    <div class="col-md-2">
        <label>Max Rate</label>
        <input type="number" step="0.01" name="maxRate" class="form-control" />
    </div>
    <div class="col-md-2">
        <label>From Date</label>
        <input type="date" name="fromDate" class="form-control" />
    </div>
    <div class="col-md-2">
        <label>To Date</label>
        <input type="date" name="toDate" class="form-control" />
    </div>
    <div class="col-12">
        <button type="submit" class="btn btn-primary">Filter</button>
        <a asp-action="ExportCsv" class="btn btn-outline-secondary ms-2">Download CSV</a>
        <a asp-action="ExportExcel" class="btn btn-outline-secondary ms-2">Download Excel (TSV)</a>
    </div>
</form>

<table class="table table-bordered table-sm">
    <thead>
        <tr>
            <th>Claim ID</th>
            <th>Lecturer</th>
            <th>Hours</th>
            <th>Rate</th>
            <th>Total</th>
            <th>Verify Status</th>
            <th>Approve Status</th>
            <th>Date Submitted</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.ClaimId</td>
                <td>@claim.LecturerName</td>
                <td>@claim.HoursWorked</td>
                <td>@claim.HourlyRate</td>
                <td>@claim.TotalPayment.ToString("C")</td>
                <td>@claim.VerifyStatus</td>
                <td>@claim.ApproveStatus</td>
                <td>@claim.DateSubmitted.ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>