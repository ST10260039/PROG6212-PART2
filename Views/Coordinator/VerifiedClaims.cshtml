@model List<MonthlyClaimSystem.Models.Claim>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Coordinator – Verified Claims";
}

<h3>Coordinator – Verified Claims</h3>

<table class="table table-bordered table-sm">
    <thead class="table-success">
        <tr>
            <th>Claim ID</th>
            <th>Lecturer</th>
            <th>Hours</th>
            <th>Rate</th>
            <th>Total</th>
            <th>Status</th>
            <th>Verified On</th>
            <th>Notes</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.ClaimId</td>
                <td>@claim.LecturerName</td>
                <td>@claim.HoursWorked</td>
                <td>@claim.HourlyRate</td>
                <td>@claim.TotalPayment.ToString("C")</td>
                <td>
                    @* Coordinator already filtered VerifyStatus == "Verified" *@
                    @if (claim.ApproveStatus == "Pending")
                    {
                        <span class="badge bg-info">Verified (Awaiting Manager Approval)</span>
                    }
                    else if (claim.ApproveStatus == "Approved")
                    {
                        <span class="badge bg-success">Approved</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Rejected</span>
                    }
                </td>
                <td>@claim.VerifiedOn?.ToString("g")</td>
                <td>
                    @if (!string.IsNullOrEmpty(claim.Notes))
                    {
                        @claim.Notes
                    }
                    else
                    {
                        <span class="text-muted">No notes</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a asp-action="PendingClaims" asp-controller="Coordinator" class="btn btn-secondary">
        ← Back to Pending Claims
    </a>
</div>