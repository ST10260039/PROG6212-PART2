@model IEnumerable<MonthlyClaimSystem.Models.Claim>
@{
    ViewData["Title"] = "Pending Claims";
}

<h2 class="mb-4">Coordinator – Pending Claims</h2>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Lecturer</th>
            <th>Hours</th>
            <th>Rate</th>
            <th>Total</th>
            <th>Date Submitted</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.LecturerName</td>
                <td>@c.HoursWorked</td>
                <td>@c.HourlyRate</td>
                <td>@c.TotalPayment</td>
                <td>@c.DateSubmitted.ToShortDateString()</td>
                <td>
                    <form asp-action="VerifyClaim" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@c.ClaimId" />
                        <button type="submit" class="btn btn-success btn-sm">Verify</button>
                    </form>
                    <form asp-action="RejectClaim" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@c.ClaimId" />
                        <input type="text" name="reason" placeholder="Reason" class="form-control form-control-sm d-inline w-50" />
                        <button type="submit" class="btn btn-danger btn-sm">Reject</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a asp-action="VerifiedClaims" class="btn btn-outline-primary">View Verified</a>
    <a asp-action="RejectedClaims" class="btn btn-outline-secondary">View Rejected</a>
</div>