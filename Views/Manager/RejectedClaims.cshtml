@model IEnumerable<MonthlyClaimSystem.Models.Claim>
@{
    ViewData["Title"] = "Rejected Claims";
}

<h2 class="mb-4">Manager – Rejected Claims</h2>

<table class="table table-bordered">
    <thead class="table-danger">
        <tr>
            <th>Lecturer</th>
            <th>Total Payment</th>
            <th>Rejected On</th>
            <th>Notes</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.LecturerName</td>
                <td>@c.TotalPayment</td>
                <td>@c.ApprovedOn?.ToString("g")</td>
                <td>@c.Notes</td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a asp-action="VerifiedClaims" asp-controller="Manager" class="btn btn-secondary">
        ← Back to Verified Claims
    </a>
</div>
