@model MonthlyClaimSystem.Models.Claim
@{
    Layout = "_Layout";
    ViewData["Title"] = "Submit Claim";
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}

<div class="row">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-body">
                <h3 class="card-title">Submit Monthly Claim</h3>

                <form asp-action="SubmitClaim" method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label class="form-label">Employee (Lecturer)</label>
                        <input type="number" asp-for="EmployeeID" class="form-control" placeholder="Enter EmployeeID" required />
                        <small class="text-muted">HR must create lecturer first and share the EmployeeID.</small>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Hours Worked</label>
                        <input asp-for="HoursWorked" class="form-control" id="hours" type="number" min="0" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Hourly Rate (auto from HR)</label>
                        <input asp-for="HourlyRate" class="form-control" id="rate" type="number" min="0" readonly />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Total Payment</label>
                        <input type="text" id="total" class="form-control" readonly />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Notes</label>
                        <textarea asp-for="Notes" class="form-control"></textarea>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Upload Supporting Documents</label>
                        <input type="file" name="files" multiple class="form-control" accept=".pdf,.docx,.xlsx,.jpg,.png" />
                    </div>

                    <button type="submit" class="btn btn-primary">Submit Claim</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function calculateTotal() {
            let hours = parseFloat(document.getElementById('hours').value) || 0;
            let rate = parseFloat(document.getElementById('rate').value) || 0;
            document.getElementById('total').value = (hours * rate).toFixed(2);
        }
        document.getElementById('hours').addEventListener('input', calculateTotal);
    </script>
}