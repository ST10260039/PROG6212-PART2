@{
    ViewData["Title"] = "Contract Monthly Claim System";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Welcome to the Contract Monthly Claim System</h2>

    <div class="row text-center">
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Submit a Claim</h5>
                    
                    <a href="/Lecturer/SubmitClaim" class="btn btn-primary">Go to Claim Submission</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Verify Claims(Programme Coordinators)</h5>
                    <a href="/Coordinator/PendingClaims" class="btn btn-success">Go to Verification</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Approve Claims(Academic Managers)</h5>

                    <a href="/Manager/VerifiedClaims" class="btn btn-info">Go to Approval</a>
                </div>
            </div>
        </div>
    </div>
    
    <form method="get" action="/Lecturer/MyClaims">
        <input type="text" name="lecturerName" placeholder="Enter your name" class="form-control mb-2" />
        <button type="submit" class="btn btn-warning">Track My Claims</button>
    </form>
</div>